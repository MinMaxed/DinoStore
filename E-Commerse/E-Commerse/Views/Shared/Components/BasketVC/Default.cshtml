@using ECommerse.Models.ViewModels
@model BasketViewModel

<h2>Your Basket - <a href="/Basket">Checkout</a></h2>

@if (Model.BasketItems.Count == 0)
{
    <h4>Your basket is empty!</h4>
}

@foreach (var item in Model.BasketItems)
{
    var product = Model.Products.Find(p => p.ID == item.ProductID);

    <div>
        <div class="basketitem">
            <img src="@product.Image" alt="@product.Description" />
            <h4>@product.Name</h4>
            <p>@product.Price</p>
        </div>
        <div>
            @*<a asp-route="Basket" asp-action="Remove" asp-route-id="@item.ID">
                    <i class="fas fa-times"></i>
                </a>*@
        </div>
    </div>

}