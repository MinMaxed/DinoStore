@{
    ViewBag.Title = "DinoStore - Home";
}

@if (TempData["LoggedOut"] != null)
{
    <p>@TempData["Loggedout"]</p>

}

<main>
    <div class="container" style="text-align:center">
        <h1>Welcome to DinoStore!</h1>
        <h3>The #1 place to buy REAL dinosaurs!</h3>
    </div>

    @if (SignInManager.IsSignedIn(User))
    {
        string email = User.FindFirst(c => c.Type == ClaimTypes.Email).Value;
        @await Component.InvokeAsync("Basket", email);

    }
</main>